<Window x:Class="Minesweeper.Save"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Minesweeper"
        mc:Ignorable="d"
        Title="Save Current Game" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <DockPanel Margin="10">
                <Label Content="Enter file name: "></Label>
                <TextBox x:Name="FileNameLabel" Width="200"></TextBox>
            </DockPanel>
            <Button Content="OK" Click="SaveGame" Width="50" Margin="20"></Button>
        </StackPanel>
    </Grid>
</Window>
